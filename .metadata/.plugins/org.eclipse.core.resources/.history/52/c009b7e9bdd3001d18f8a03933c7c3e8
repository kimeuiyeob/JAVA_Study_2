package 람다식;

interface A {
	void abc();
}
class B {
	static void bcd() {
		System.out.println("메서드");
	}
}

public class RefOfStaticMethod {
	public static void main(String[] args) {
		
		//정적 메서드 참조
		//1 익명 이너클래스 방법
		A a = new A() {
			@Override
			public void abc() {
				B b = new B();
				b.bcd();
			}
		};
		a.abc();
		
	}
}
