package 람다식;

interface AAA {
	void abc();
}
class BBB {
	static void bcd() {
		System.out.println("메서드");
	}
}

public class RefOfStaticMethod {
	public static void main(String[] args) {
		
		//정적 메서드 참조
		//1 익명 이너클래스 방법
		AAA a = new AAA() {
			@Override
			public void abc() {
				BBB b = new BBB();
				b.bcd();
			}
		};
		a.abc();
		
	}
}
